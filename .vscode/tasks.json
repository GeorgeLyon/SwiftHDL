{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cmake",
      "label": "Build CIRCT",
      "command": "build",
      "targets": [
        "firtool",
        "SwiftHDL",
        "SwiftHDL_Swift_Test",
        "swift-hdl-lsp-server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [ ]
    },
    {
      "type": "cmake",
      "label": "Test CIRCT",
      "command": "build",
      "targets": [
        "check-swift-hdl"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [ ]
    },
    {
      "type": "swift",
      "args": [
        "build",
        "--build-tests",
        "-Xswiftc",
        "-cxx-interoperability-mode=default"
      ],
      "cwd": "SwiftHDL",
      "disableTaskQueue": true,
      "problemMatcher": [
        "$swiftc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "label": "swift: Build All (SwiftHDL)",
      "detail": "swift build --build-tests -Xswiftc -cxx-interoperability-mode=default"
    }
  ]
}